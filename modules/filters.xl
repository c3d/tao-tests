import Filters 1.0

Filter T:text, F:code ->
    capture_page "filter_" & T,
        color "white"
        texture "lena.jpg"
        do F
        rectangle 0, 0, 500, 500

Filter "gaussian",
    gaussian 5
Filter "mean",
    mean 5
Filter "emboss",
    emboss 1
Filter "sharpness",
    sharpness 1
Filter "black_and_white",
    black_and_white
Filter "erode",
    erode 0, 1, 0.3
